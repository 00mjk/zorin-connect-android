<resources>

    <color name="darkPrimary">#191f22</color>
    <color name="darkStatusBarBackground">#191f22</color>
    <color name="darkAccent">#bde6fb</color>
    <color name="darkText">#bde6fb</color>
    <color name="darkTextSecondary">#6b828e</color>
    <color name="darkButtonBackground">#293338</color>
    <color name="darkButtonDisabledBackground">#21292d</color>

    <!-- KdeConnectThemeBase styles must only be defined in the main res/values/ folder -->
    <style name="KdeConnectThemeBase.Dark" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkStatusBarBackground</item>
        <item name="colorSecondary">@color/darkAccent</item>
        <item name="colorOnSecondary">@color/darkPrimary</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorControlHighlight">@color/darkTextSecondary</item>
        <item name="android:windowBackground">@color/darkPrimary</item>
        <item name="toolbarStyle">@style/KdeConnectTheme.Toolbar.Dark</item>
        <item name="popupTheme">@style/PopupStyle.Dark</item>
        <item name="mainNavigationViewStyle">@style/MainNavigationView.Dark</item>
        <item name="disableableButtonStyle">@style/DisableableButton.Dark</item>
        <item name="buttonBackgroundColor">@color/darkButtonBackground</item>
        <item name="colorHighContrast">@android:color/white</item>
        <item name="android:textColorPrimary">@color/darkText</item>
        <item name="android:textColorSecondary">@color/darkTextSecondary</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="textColor">@color/darkText</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="colorButtonNormal">@color/darkButtonBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="alertDialogTheme">@style/ZorinConnectAlertDialogStyle.Dark</item>
    </style>

    <style name="ZorinConnectAlertDialogStyle.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/darkAccent</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="android:textColorPrimary">@color/darkText</item>
        <item name="android:background">@color/darkPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle.Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle.Dark</item>
    </style>

    <style name="AlertDialogButtonStyle.Dark" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/darkAccent</item>
    </style>

    <style name="KdeConnectThemeBase.Dark.NoActionBar" parent="KdeConnectThemeBase.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- KdeConnectTheme styles (without the 'Base' on the end) can be redefined in other 'values' folders. like res/values-v21/ -->

    <style name="KdeConnectTheme.Toolbar.Dark">
        <item name="android:background">@color/darkPrimary</item>
    </style>
    <style name="KdeConnectTheme.Dark" parent="KdeConnectThemeBase.Dark" />
    <style name="KdeConnectTheme.Dark.NoActionBar" parent="KdeConnectThemeBase.Dark.NoActionBar" />

    <style name="MainNavigationView.Dark">
        <item name="android:background">@drawable/state_list_drawer_background_dark</item>
        <item name="itemBackground">@drawable/state_list_drawer_background_dark</item>
        <item name="itemIconTint">@color/state_list_drawer_text_dark</item>
        <item name="itemTextColor">@color/state_list_drawer_text_dark</item>
    </style>

    <style name="DisableableButton.Dark" parent="ThemeOverlay.AppCompat">
        <item name="colorButtonNormal">@drawable/disableable_button_dark</item>
    </style>

    <style name="ActionModeStyle.Dark" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/darkAccent</item>
    </style>

    <style name="PopupStyle.Dark" parent="ThemeOverlay.AppCompat">
        <item name="android:colorBackground">@color/darkPrimary</item>
    </style>
</resources>
